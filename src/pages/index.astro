    margin-bottom: 0;
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }

  .a-view-all {
    font-size: 1.2rem;
  }

  .activities {
    display: flex;
    flex-direction: column;
    gap: 1rem; /* 要素間の隙間 */
  }
</style>